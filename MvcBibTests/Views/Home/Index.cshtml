@model IEnumerable<Bibliotheek.Domain.Entities.Boek>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Isbn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Titel)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Isbn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Titel) (@item.Exemplaren.Count)
        </td>
        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id })
            @if(item.Exemplaren.Count()!=0){
                @:|
                @Html.ActionLink("Wis alle exemplaren", "WisAlleExemplarenVanBoek", new { id=item.Id })
            }
        </td>
    </tr>
}

</table>
